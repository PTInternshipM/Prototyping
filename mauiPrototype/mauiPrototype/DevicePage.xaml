<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mauiPrototype.DevicePage"
             Title="Device">

    <ScrollView>

        <Frame
            Margin="20">
            <VerticalStackLayout
                Spacing="20"
                Padding="30,0"
                VerticalOptions="StartAndExpand">
                <StackLayout>
                    <Label Text="Id"></Label>
                    <Label Text="{Binding Id}" FontAttributes="Bold"></Label>
                </StackLayout>
                <StackLayout>
                    <Label Text="Name"></Label>
                    <Label Text="{Binding Name}" FontAttributes="Bold"></Label>
                </StackLayout>
                <StackLayout>
                    <Label Text="Battery Level"></Label>
                    <Label Text="{Binding BatteryLevel}" FontAttributes="Bold"></Label>
                </StackLayout>
                <StackLayout>
                    <Label Text="Manufacturer"></Label>
                    <Label Text="{Binding Manufacturer}" FontAttributes="Bold"></Label>
                </StackLayout>
            </VerticalStackLayout>
        </Frame>
    </ScrollView>

</ContentPage>